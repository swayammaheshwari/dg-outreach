                <div class="col-md-4">
                    <a href="single.html" class="h-entry img-5 h-100 gradient">

                        <div class="featured-img" style="background-image: url('images/img_2_horizontal.jpg');"></div>

                        <div class="text">
                            <span class="date">Apr. 14th, 2022</span>
                            <h2>The Rise of 5G Technology: Unlocking a New Era of Connectivity</h2>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="single.html" class="h-entry mb-30 v-height gradient">

                        <div class="featured-img" style="background-image: url('images/img_2_horizontal.jpg');">
                        </div>

                        <div class="text">
                            <span class="date">Apr. 14th, 2022</span>
                            <h2>The Rise of 5G Technology: Unlocking a New Era of Connectivity</h2>
                        </div>
                    </a>
                    <a href="single.html" class="h-entry v-height gradient">

                        <div class="featured-img" style="background-image: url('images/img_2_horizontal.jpg');">
                        </div>

                        <div class="text">
                            <span class="date">Apr. 14th, 2022</span>
                            <h2>The Rise of 5G Technology: Unlocking a New Era of Connectivity</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- End retroy layout blog posts -->

    <!-- Start posts-entry -->
    <section id="technology" class="section posts-entry">
        <div class="container">
            <div class="row mb-4">
                <div class="col-sm-9">
                    <h2 class="posts-entry-title">technology</h2>

                </div>
                <div class="col-sm-3 text-sm-end"><a href="/category/Technology" class="read-more">View All</a></div>
            </div>
            <div class="row g-3">
                <p style="font-size: large; color: black;">Embrace the future with our tech-focused blog, where we
                    delve into the fascinating realm of
                    cutting-edge innovations and explore how they shape our lives.</p>
                <div class="col-md-12">
                    <div class="row">
                        <% blogs.Technology.forEach(blog=> { %>

                            <div class="col-md-4">
                                <div class="blog-entry">
                                    <a href="/blog/<%= blog._id %>" class="img-link">
                                        <div class="img-wrapper">
                                            <img src="<%= blog.titleImage %>" alt="Image" class="img-fluid custom-img">
                                        </div>
                                    </a>
                                    <span class="date">
                                        <%= blog.date %>
                                    </span>
                                    <h2><a href="/blog/<%= blog._id %>">
                                            <%= blog.title %>
                                        </a>
                                    </h2>
                                    <p>
                                        <%- blog.body.substring(0,50) + "..." %>
                                    </p>
                                    <p><a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary">Read
                                            More</a>
                                    </p>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End posts-entry -->

    <!-- Start posts-entry -->
    <section id="lifestyle" class="section posts-entry posts-entry-sm bg-light">
        <div class="container">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h2 class="posts-entry-title">Lifestyle</h2>
                </div>
                <div class="col-sm-6 text-sm-end"><a href="/category/lifestyle" class="read-more">View All</a></div>
            </div>
            <div class="row">
                <p style="font-size: large; color: black;">Embrace the future with our tech-focused blog, where we
                    delve into the fascinating realm of
                    cutting-edge innovations and explore how they shape our lives.</p>
                <% blogs.Lifestyle.forEach(blog=> { %>
                    <div class="col-md-6 col-lg-3">
                        <div class="blog-entry">
                            <a href="/blog/<%= blog._id %>" class="img-link">
                                <div class="img-wrapper">
                                    <img src="<%= blog.titleImage %>" alt="Image" class="img-fluid custom-img">
                                </div>
                            </a>
                            <span class="date">
                                <%= blog.date %>
                            </span>
                            <h2><a href="/blog/<%= blog._id %>">
                                    <%= blog.title %>
                                </a></h2>
                            <p>
                                <%- blog.body.substring(0,50) + "..." %>
                            </p>
                            <p><a href="/blog/<%= blog._id %>" class="read-more">Continue Reading</a></p>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>
    <!-- End posts-entry -->

    <!-- Start posts-entry -->
    <section id="food" class="section">
        <div class="container">

            <div class="row mb-4">
                <div class="col-sm-6">
                    <h2 class="posts-entry-title">Food</h2>
                </div>
                <div class="col-sm-6 text-sm-end"><a href="/category/food" class="read-more">View All</a></div>
            </div>

            <div class="row">
                <p style="font-size: large; color: black;">Embrace the future with our tech-focused blog, where we
                    delve into the fascinating realm of
                    cutting-edge innovations and explore how they shape our lives.</p>

                <% blogs.Food.forEach(blog=> { %>
                    <div class="col-lg-4 mb-4">
                        <div class="post-entry-alt">
                            <a href="/blog/<%= blog._id %>" class="img-link">
                                <div class="img-wrapper">
                                    <img src="<%= blog.titleImage %>" alt="Image" class="img-fluid custom-img">
                                </div>
                            </a>
                            <div class="excerpt">

                                <h2><a href="blog/<%= blog._id %>">
                                        <%= blog.title %>
                                    </a></h2>
                                <div class="post-meta align-items-center text-left clearfix">


                                    <span>
                                        <%= blog.date %>
                                    </span>
                                </div>

                                <p>
                                    <%- blog.body.substring(0,100) + "..." %>
                                </p>
                                <p><a href="blog/<%=blog._id%>" class="read-more">Continue Reading</a></p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>
    </section>

    <section id="improvement" class="section posts-entry posts-entry-sm bg-light">
        <div class="container">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h2 class="posts-entry-title">Home Improvement</h2>
                </div>
                <div class="col-sm-6 text-sm-end"><a href="/category/improvement" class="read-more">View All</a></div>
            </div>
            <div class="row">
                <p style="font-size: large; color: black;">Transform your living space into a haven of beauty and
                    functionality with our home improvement blog, where we share expert advice, creative ideas, and DIY
                    projects to bring out the best in your abode.</p>
                <% blogs["Home Improvement"].forEach(blog=> { %>
                    <div class="col-md-6 col-lg-3">
                        <div class="blog-entry">
                            <a href="/blog/<%= blog._id %>" class="img-link">
                                <div class="img-wrapper">
                                    <img src="<%= blog.titleImage %>" alt="Image" class="img-fluid custom-img">
                                </div>
                            </a>
                            <span class="date">
                                <%= blog.date %>
                            </span>
                            <h2><a href="single.html">
                                    <%= blog.title %>
                                </a></h2>
                            <p>
                                <%- blog.body.substring(0,50) + "..." %>
                            </p>
                            <p><a href="#" class="read-more">Continue Reading</a></p>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>

