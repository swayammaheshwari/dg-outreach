    <section id="culture" class="section posts-entry">
        <div class="container">
            <div class="row mb-4">
                <div class="col-sm-9">
                    <h2 class="posts-entry-title">technology</h2>

                </div>
                <div class="col-sm-3 text-sm-end"><a href="/category/technology" class="read-more">View All</a></div>
            </div>
            <div class="row g-3">
                <p style="font-size: large; color: black;">Embrace the future with our tech-focused blog, where we
                    delve into the fascinating realm of
                    cutting-edge innovations and explore how they shape our lives.</p>
                <div class="col-md-12">
                    <div class="row">
                        <% blogs.Technology.forEach(blog=> { %>

                            <div class="col-md-4">
                                <div class="blog-entry">
                                    <a href="/blog/<%= blog._id %>" class="img-link">
                                        <img src="<%= blog.titleImage %>" alt="Image" class="img-fluid">
                                    </a>
                                    <span class="date">
                                        <%= blog.date %>
                                    </span>
                                    <h2><a href="/blog/<%= blog._id %>">
                                            <%= blog.title %>
                                        </a>
                                    </h2>
                                    <p>
                                        <%= blog.body.substring(0,50) + "..." %>
                                    </p>
                                    <p><a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary">Read
                                            More</a>
                                    </p>
                                </div>
                            </div>
